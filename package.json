{
  "name": "root",
  "private": true,
  "scripts": {
    "check": "lerna exec --stream -- npm pack --dry-run",
    "clean": "lerna clean",
    "format": "node packages/u-scripts/bin/u prettier --write '**/*.*'",
    "format-check": "node packages/u-scripts/bin/u prettier --check '**/*.*'",
    "postinstall": "lerna bootstrap --hoist",
    "prerelease": "node release-checks",
    "release": "lerna publish --force-publish --conventional-commits --sign-git-commit --sign-git-tag",
    "release-canary": "lerna publish --force-publish --canary --yes --exact",
    "sort": "lerna exec -- npx sort-package-json",
    "test": "npm run format && lerna run test",
    "test-ci": "npm run format-check && lerna run test-ci",
    "update": "lerna exec -- npx npm-check-updates -u"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "execa": "^4.0.0",
    "husky": "^4.2.5",
    "lerna": "^3.20.2"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
